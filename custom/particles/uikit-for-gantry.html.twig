{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    {% assets in 'head' with { priority: 10 } %}
        {% if particle.enabled and particle.settings.css %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/{{ particle.version.version }}/css/uikit.min.css" type="text/css"/>
        {% endif %}
        {% if particle.enabled and particle.settings.js %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/{{ particle.version.version }}/js/uikit.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/{{ particle.version.version }}/js/uikit-icons.min.js"></script>
        {% endif %}
    {% endassets -%}
{% endblock %}
